---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop me a message!"
    subtitle="I'm always interested in hearing from fellow developers, tech enthusiasts, or anyone who wants to discuss technology, collaboration opportunities, or just say hello."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="I typically respond within 24-48 hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Ways to reach me"
    items={[
      {
        title: 'General inquiries',
        description: `Feel free to reach out for any questions about my blog posts, technology discussions, or general conversations about software development and innovation.`,
      },
      {
        title: 'Collaboration opportunities',
        description:
          "Interested in working together on a project? I'm always open to discussing potential collaborations, open-source contributions, or interesting technical challenges.",
      },
      {
        title: 'Technical discussions',
        description:
          'Have questions about specific technologies, frameworks, or development practices? I love engaging in technical discussions and sharing knowledge.',
      },
      {
        title: 'Email',
        description: 'hello@troneras.com',
        icon: 'tabler:mail',
      },
      {
        title: 'X (Twitter)',
        description: '@troneras',
        icon: 'tabler:brand-x',
      },
      {
        title: 'GitHub',
        description: 'github.com/troneras',
        icon: 'tabler:brand-github',
      },
    ]}
  />
</Layout>
