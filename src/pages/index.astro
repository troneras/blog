---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Troneras — Personal Blog of Antonio Blázquez',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero image={{ src: '~/assets/images/hero-image-x2.png', alt: 'Troneras Hero Image' }}>
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Antonio Blázquez</span>
    </Fragment>

    <Fragment slot="subtitle"> Technical Projects, AI integrations, web development, voice and automation. </Fragment>
  </Hero>

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="About Me"
    title="Antonio Blázquez"
    items={[
      {
        title: 'Technology Enthusiast',
        description:
          'Passionate about software development, emerging technologies, and their impact on our daily lives.',
      },
      {
        title: 'Continuous Learner',
        description: 'Always exploring new ideas, frameworks, and approaches to solve complex problems.',
      },
      {
        title: 'Community Contributor',
        description: 'Believing in the power of sharing knowledge and contributing to the open-source community.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Technology and Innovation',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Sharing insights and experiences
      </h3>
      Through this blog, I share my journey, learnings, and thoughts on technology and life.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Latest Posts Widget *********** -->
  <BlogLatestPosts
    title="Latest Posts"
    information="Recent thoughts and experiences from my journey. Each post reflects my current interests, learnings, and perspectives on technology and life."
  />
</Layout>
