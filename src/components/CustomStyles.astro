---
import '@fontsource-variable/inter';
import '@fontsource-variable/space-grotesk';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable', sans-serif;
    --aw-font-serif: 'Inter Variable', sans-serif;
    --aw-font-heading: 'Space Grotesk Variable', sans-serif;

    --aw-color-primary: rgb(255 95 135); /* vibrant magenta-pink */
    --aw-color-secondary: rgb(0 210 170); /* neon turquoise */
    --aw-color-accent: rgb(255 195 0); /* electric yellow */

    --aw-color-text-heading: rgb(10, 10, 10);
    --aw-color-text-default: rgb(34, 34, 34);
    --aw-color-text-muted: rgba(34, 34, 34, 0.66);

    --aw-color-bg-page: rgb(240, 236, 229); /* warm beige background */

    ::selection {
      background-color: rgb(0, 210, 170);
      color: black;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable', sans-serif;
    --aw-font-serif: 'Inter Variable', sans-serif;
    --aw-font-heading: 'Space Grotesk Variable', sans-serif;

    --aw-color-primary: rgb(255 95 135);
    --aw-color-secondary: rgb(0 210 170);
    --aw-color-accent: rgb(255 195 0);

    --aw-color-text-heading: rgb(248, 250, 252);
    --aw-color-text-default: rgb(230, 235, 245);
    --aw-color-text-muted: rgba(230, 235, 245, 0.66);
    --aw-color-bg-page: rgb(12, 12, 16); /* neutral charcoal */

    ::selection {
      background-color: rgb(255 195 0);
      color: black;
    }
  }
</style>
